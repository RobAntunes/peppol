---
// Hero section with gradient background and status indicator
import { ArrowRight } from "@lucide/astro";
import DashboardMockup from "./DashboardMockup.astro";
---

<section class="relative pt-32 pb-20 lg:pt-40 lg:pb-28 overflow-hidden">
    <!-- Background Gradient -->
    <div
        class="absolute inset-0 -z-10 h-full w-full bg-[radial-gradient(ellipse_at_top,var(--tw-gradient-stops))] from-blue-50/50 via-white to-white"
        aria-hidden="true"
    >
    </div>

    <div class="max-w-6xl mx-auto px-6 text-center">
        <!-- Status Badge -->
        <div
            class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-white border border-slate-200 shadow-sm mb-8 animate-fade-in-up"
        >
            <span class="relative flex h-2 w-2" aria-hidden="true">
                <span
                    class="animate-ping absolute inline-flex h-full w-full rounded-full bg-blue-400 opacity-75"
                ></span>
                <span
                    class="relative inline-flex rounded-full h-2 w-2 bg-blue-500"
                ></span>
            </span>
            <span class="text-xs font-medium text-slate-600"
                >Peppol Access Point Active</span
            >
        </div>

        <!-- Main Heading -->
        <h1
            class="text-4xl md:text-6xl font-semibold text-slate-900 tracking-tight mb-6 leading-[1.1]"
        >
            Swiss e-invoicing <br class="hidden md:block" />made simple for
            SMEs.
        </h1>

        <!-- Description -->
        <p
            class="text-lg text-slate-500 max-w-2xl mx-auto mb-10 leading-relaxed"
        >
            Connect to the Peppol network without complex ERP integrations.
            Secure, compliant, and designed specifically for Swiss businesses.
        </p>

        <!-- CTA Buttons -->
        <div
            class="flex flex-col sm:flex-row items-center justify-center gap-4 mb-16"
        >
            <a
                href="#pricing"
                class="w-full sm:w-auto bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium px-6 py-3 rounded-lg transition-all shadow-lg shadow-blue-600/20 flex items-center justify-center gap-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
            >
                Start sending invoices
                <ArrowRight size={14} />
            </a>
            <a
                href="#how-it-works"
                class="w-full sm:w-auto bg-white hover:bg-slate-50 text-slate-700 text-sm font-medium px-6 py-3 rounded-lg border border-slate-200 transition-all shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
            >
                How it works
            </a>
        </div>

        <!-- Dashboard Mockup -->
        <DashboardMockup />
    </div>
</section>
