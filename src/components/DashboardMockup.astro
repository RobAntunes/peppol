---
// Dashboard UI mockup component
---

<div
    class="relative max-w-4xl mx-auto rounded-xl bg-white shadow-2xl border border-slate-200/60 p-1"
    role="img"
    aria-label="Dashboard interface preview showing invoice statistics and recent submissions"
>
    <div class="rounded-lg overflow-hidden bg-slate-50 border border-slate-100">
        <!-- Fake Browser Header -->
        <div
            class="bg-white border-b border-slate-100 px-4 py-3 flex items-center justify-between"
        >
            <div class="flex gap-4" aria-hidden="true">
                <div class="h-2 w-2 rounded-full bg-red-400"></div>
                <div class="h-2 w-2 rounded-full bg-amber-400"></div>
                <div class="h-2 w-2 rounded-full bg-emerald-400"></div>
            </div>
            <div class="text-[10px] text-slate-400 font-mono">
                dashboard.peppol.taxera.tech
            </div>
        </div>

        <!-- Dashboard Content -->
        <div class="p-6">
            <!-- Stats Grid -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
                <div
                    class="bg-white p-4 rounded-lg border border-slate-100 shadow-sm"
                >
                    <div class="text-xs text-slate-500 mb-1">Invoices Sent</div>
                    <div class="text-xl font-semibold text-slate-900">248</div>
                </div>
                <div
                    class="bg-white p-4 rounded-lg border border-slate-100 shadow-sm"
                >
                    <div class="text-xs text-slate-500 mb-1">Current Plan</div>
                    <div class="text-xl font-semibold text-blue-600">
                        Standard
                    </div>
                </div>
                <div
                    class="bg-white p-4 rounded-lg border border-slate-100 shadow-sm"
                >
                    <div class="text-xs text-slate-500 mb-1">Status</div>
                    <div
                        class="text-xs font-medium text-emerald-600 bg-emerald-50 px-2 py-1 rounded-md inline-block mt-1"
                    >
                        Peppol Connected
                    </div>
                </div>
            </div>

            <!-- Recent Submissions Table -->
            <div
                class="bg-white rounded-lg border border-slate-100 shadow-sm overflow-hidden"
            >
                <div
                    class="px-4 py-3 border-b border-slate-100 bg-slate-50/50 flex justify-between items-center"
                >
                    <span class="text-xs font-semibold text-slate-700"
                        >Recent Submissions</span
                    >
                    <span
                        class="text-[10px] text-blue-600 font-medium cursor-pointer"
                        >View all</span
                    >
                </div>
                <div class="divide-y divide-slate-50">
                    <!-- Invoice Item 1 -->
                    <div class="px-4 py-3 flex items-center justify-between">
                        <div class="flex items-center gap-3">
                            <div
                                class="p-1.5 bg-blue-50 text-blue-600 rounded-md"
                            >
                                <i
                                    data-lucide="file-check"
                                    class="w-4 h-4"
                                    aria-hidden="true"></i>
                            </div>
                            <div>
                                <div class="text-xs font-medium text-slate-900">
                                    Inv-2023-001
                                </div>
                                <div class="text-[10px] text-slate-500">
                                    Mustermann AG
                                </div>
                            </div>
                        </div>
                        <div class="text-right">
                            <div class="text-xs font-medium text-slate-900">
                                CHF 1,250.00
                            </div>
                            <div class="text-[10px] text-emerald-600">
                                Delivered
                            </div>
                        </div>
                    </div>
                    <!-- Invoice Item 2 -->
                    <div class="px-4 py-3 flex items-center justify-between">
                        <div class="flex items-center gap-3">
                            <div
                                class="p-1.5 bg-blue-50 text-blue-600 rounded-md"
                            >
                                <i
                                    data-lucide="file-clock"
                                    class="w-4 h-4"
                                    aria-hidden="true"></i>
                            </div>
                            <div>
                                <div class="text-xs font-medium text-slate-900">
                                    Inv-2023-002
                                </div>
                                <div class="text-[10px] text-slate-500">
                                    Schmidt GmbH
                                </div>
                            </div>
                        </div>
                        <div class="text-right">
                            <div class="text-xs font-medium text-slate-900">
                                CHF 840.50
                            </div>
                            <div class="text-[10px] text-amber-600">
                                Processing
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
